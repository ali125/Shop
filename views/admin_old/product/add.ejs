<%- include('../layout/header'); %>

<div class="head-page">
    <h1><%= title %></h1>
</div>

<form method="POST" action="/admin/products/add" enctype="multipart/form-data">
    <div class="form-group">
        <label for="image_url">آپلود عکس</label>
        <input type="file" class="form-control" name="image_url" id="image_url" />
    </div>
    <div class="form-group">
        <label for="media">آپلود عکس</label>
        <input type="file" class="form-control" name="media" id="media" />
        <input type="file" class="form-control" name="media" id="media" />
    </div>
    <div class="form-group">
        <label for="title">عنوان</label>
        <input type="text" class="form-control" name="title" id="title" />
    </div>
    <div class="form-group">
        <label for="slug">عنوانک</label>
        <input type="text" class="form-control" name="slug" id="slug" />
    </div>
    <div class="form-group">
        <label for="description">توضیحات</label>
        <textarea class="form-control" name="description" id="description"></textarea>
    </div>
    <div class="form-group">
        <label for="users">کاربر</label>
        <select class="form-control" id="users" name="user_id">
            <% users.forEach(user =>{ %>
                <option value="<%= user.id %>"><%= user.full_name %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-group">
        <label for="users">دسته بندی</label>
        <select class="form-control js-select2-single" name="category_id">
            <option value="0">بدون دسته بندی</option>
            <% categories.forEach(category =>{ %>
                <option value="<%= category.id %>"><%= category.name %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-group">
        <label for="users">تگ</label>
        <select class="form-control js-select2-multiple" name="tags[]" multiple="multiple">
            <% tags.forEach(tag =>{ %>
                <option value="<%= tag.id %>"><%= tag.name %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">ثبت محصول</button>
</form>


<%- include('../layout/footer'); %>
