<%- include('../layout/header'); %>

<div class="head-page">
    <h1><%= title %></h1>
    <a href="/admin/users/add" class="btn btn-success">افزودن کاربر</a>
</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">عکس</th>
        <th scope="col">نام و نام خانوادگی</th>
        <th scope="col">ایمیل</th>
        <th scope="col">موبایل</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    <% users.forEach(user =>{ %>
    <tr>
        <th scope="row"><%= user.id %></th>
        <td>
            <img src="<%= user.avatar_url %>" alt="<%= user.full_name %>" />
        </td>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.mobile %></td>
        <td>
            <a href="/admin/users/<%= user.id %>/edit" class="btn btn-sm btn-warning">ویرایش</a>
            <a href="/admin/users/<%= user.id %>/delete" class="btn btn-sm btn-danger">حذف</a>
        </td>
    </tr>
    <% }); %>
    </tbody>
</table>


<%- include('../layout/footer'); %>
