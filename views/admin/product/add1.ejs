<%- include('../layout/header'); %>
<div class="">
    <%- include('../layout/head-page'); %>
    <form method="post" action="/admin/products/add" data-parsley-validate class="form-horizontal main-form form-label-left">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div id="media_upload"></div>
        <div class="" role="tabpanel" data-example-id="togglable-tabs">
        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
            <li role="presentation" class="active">
                <a href="#information" id="information-tab" role="tab" data-toggle="tab" aria-expanded="true">اطلاعات محصول</a>
            </li>
            <li role="presentation" class="">
                <a href="#more_information" role="tab" id="more-information-tab" data-toggle="tab" aria-expanded="false">اطلاعات جزئی</a>
            </li>
        </ul>
        <div id="myTabContent" class="tab-content">
            <div role="tabpanel" class="tab-pane active " id="information" aria-labelledby="information-tab">
                <div class="row">
                    <div class="col-md-6 col-sm-12 ">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>اطلاعات محصول <small>different form elements</small></h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a class="dropdown-item" href="#">Settings 1</a>
                                            </li>
                                            <li><a class="dropdown-item" href="#">Settings 2</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">

                                <div class="media"></div>
                                <label for="title">عنوان * :</label>
                                <input type="text" id="title" class="form-control" name="title" required />

                                <label for="slug">عنوانک :</label>
                                <input type="text" id="slug" class="form-control" name="slug"  />

                                <label for="category_id">دسته بندی</label>
                                <select class="form-control js-select2-single" id="category_id" name="category_id">
                                    <option value="0">بدون دسته بندی</option>
                                    <% categories.forEach(category =>{ %>
                                        <option value="<%= category.id %>"><%= category.name %></option>
                                    <% }) %>
                                </select>

                                <label for="tags">تگ</label>
                                <select class="form-control js-select2-multiple" name="tags[]" id="tags" multiple="multiple">
                                    <% tags.forEach(tag =>{ %>
                                        <option value="<%= tag.id %>"><%= tag.name %></option>
                                    <% }) %>
                                </select>

                                <label for="users">کاربر</label>
                                <select class="form-control" id="users" name="user_id" required>
                                    <% users.forEach(user =>{ %>
                                        <option value="<%= user.id %>"><%= user.full_name %></option>
                                    <% }) %>
                                </select>

                                <div class="ln_solid"></div>

                                <label for="summernote">توضیحات</label>

                                <!--                        <textarea name="description" id="formEditor" class="form-editor"></textarea>-->
                                <textarea rows="5" id="summernote" name="content"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <%- include('../layout/file-uploader', { upload_id: "[stock][0][media][]" }); %>
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>اطلاعات جزئی محصول <small>different form elements</small></h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a class="dropdown-item" href="#">Settings 1</a>
                                            </li>
                                            <li><a class="dropdown-item" href="#">Settings 2</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <label for="price[0]">قیمت * :</label>
                                <input type="text" id="price[0]" class="form-control" name="[stock][0][price]" required />

                                <label for="count[0]">تعداد :</label>
                                <input type="number" id="count[0]" class="form-control" name="[stock][0][count]" value="0" />

                                <% details.forEach(item =>{ %>
                                    <label for="<%= item.slug %>"><%= item.title %>:</label>
                                    <select id="<%= item.slug %>" class="form-control" name="[stock][0][<%= item.slug %>]">
                                        <option value="">انتخاب <%= item.title %></option>
                                        <% if(item.terms.length > 0) { %>
                                            <% item.terms.forEach(t =>{ %>
                                                <optgroup label="<%= t.title %>">
                                                    <% t.termmeta.forEach(meta =>{ %>
                                                    <option value="<%= meta.id %>"><%= meta.meta_value %></option>
                                                        <% }) %>
                                                </optgroup>
                                            <% }) %>
                                        <% } else { %>
                                            <% item.termmeta.forEach(meta =>{ %>
                                                <option value="<%= meta.id %>">
                                                    <%= item.type === 'color' ? '<span style="background-color: '+meta.meta_value+'"><span>' : '' %>
                                                    <%= meta.meta_key %>
                                                </option>
                                            <% }) %>
                                        <% } %>
                                    </select>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="more_information" aria-labelledby="more-information-tab">
                <div class="row">
                    <div class="col-md-6 col-sm-12 ">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>اطلاعات جزئی محصول <small>different form elements</small></h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a class="dropdown-item" href="#">Settings 1</a>
                                            </li>
                                            <li><a class="dropdown-item" href="#">Settings 2</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <div class="media"></div>
                                <label for="price[1]">قیمت :</label>
                                <input type="text" id="price[1]" class="form-control" name="[stock][1][price]" />

                                <label for="count[1]">تعداد :</label>
                                <input type="text" id="count[1]" class="form-control" name="[stock][1][count]"  />

                                <% details.forEach(item =>{ %>
                                    <label for="<%= item.slug %>"><%= item.title %>:</label>
                                    <select id="<%= item.slug %>" class="form-control" name="[stock][1][<%= item.slug %>]">
                                        <option value="">انتخاب <%= item.title %></option>
                                        <% if(item.terms.length > 0) { %>
                                            <% item.terms.forEach(t =>{ %>
                                                <optgroup label="<%= t.title %>">
                                                    <% t.termmeta.forEach(meta =>{ %>
                                                        <option value="<%= meta.id %>"><%= meta.meta_value %></option>
                                                    <% }) %>
                                                </optgroup>
                                            <% }) %>
                                        <% } else { %>
                                            <% item.termmeta.forEach(meta =>{ %>
                                                <option value="<%= meta.id %>"><%= meta.meta_value %></option>
                                            <% }) %>
                                        <% } %>
                                    </select>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 ">
                        <%- include('../layout/file-uploader', { upload_id: "[stock][1][media][]" }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <%- include('../layout/form-buttons'); %>
    </form>
</div>

<%- include('../layout/footer'); %>


