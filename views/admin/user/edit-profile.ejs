<%- include('../layout/header') %>
<div class="">
    <%- include('../layout/head-page') %>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>ویرایش اطلاعات</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <form method="post" action="/admin/users/profile/edit?_csrf=<%=csrfToken%>" class="x_content" enctype="multipart/form-data" >
                        <div class="col-md-9 col-sm-9 ">
                                <div class=" row">
                                    <div class="form-group col-xs-12 col-sm-6">
                                        <label for="first_name">نام</label>
                                        <input type="text"
                                               class="form-control"
                                               id="first_name"
                                               name="first_name"
                                               value="<%= user.first_name %>"
                                               placeholder="نام" />
                                    </div>
                                    <div class="form-group col-xs-12 col-sm-6">
                                        <label for="last_name">نام خانوادگی</label>
                                        <input type="text"
                                               class="form-control"
                                               id="last_name"
                                               name="last_name"
                                               value="<%= user.last_name %>"
                                               placeholder="نام خانوادگی" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="mobile">شماره موبایل</label>
                                    <input type="tel"
                                           class="form-control"
                                           id="mobile"
                                           name="mobile"
                                           value="<%= user.mobile %>"
                                           placeholder="شماره موبایل" />
                                </div>
                                <div class="form-group">
                                    <label for="email">ایمیل</label>
                                    <input type="email"
                                           class="form-control"
                                           id="email"
                                           name="email"
                                           value="<%= user.email %>"
                                           placeholder="پست الکترونیکی" />
                                </div>
                </div>
                        <div class="col-md-3 col-sm-3 profile_left">
                        <div class="profile_img">
                            <div id="crop-avatar">
                                <!-- Current avatar -->
                                <img class="img-responsive avatar-view w-100" src="<%= user.avatar_url %>" alt="Avatar" title="Change the avatar">
                            </div>
                        </div>
                        <br />
                        <input type="file" class="form-control" name="avatar_url" aria-label="avatar_url" />
                    </div>
                        <%- include('../layout/form-buttons') %>
                    </form>
                </div>
            </div>
        </div>
</div>
<%- include('../layout/footer') %>
