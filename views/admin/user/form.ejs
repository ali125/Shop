<%- include('../layout/form-head', { form_title: 'اطلاعات کاربران'  }); %>
<form method="post" action="/admin/users/<%= editing ? user.id + '/update' : 'add' %>" data-parsley-validate class="form-horizontal main-form form-label-left">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <label for="first_name">نام</label>
    <input type="text" class="form-control" name="first_name" id="first_name" value="<%= editing || hasError ? user.first_name : '' %>" />

    <label for="last_name">نام خانوادگی</label>
    <input type="text" class="form-control" name="last_name" id="last_name" value="<%= editing || hasError ? user.last_name : '' %>" />

    <label for="email">ایمیل</label>
    <input type="email" class="form-control" name="email" id="email" value="<%= editing || hasError ? user.email : '' %>" />

    <label for="mobile">موبایل</label>
    <input type="tel" class="form-control" name="mobile" id="mobile" value="<%= editing || hasError ? user.mobile : '' %>" />

    <label for="roles">نقش</label>
    <select class="form-control" id="roles" name="role_id">
        <% roles.forEach(role =>{ %>
            <option <%= editing || hasError ? user.role_id === role.id ? 'selected' : '' : '' %>
                    value="<%= role.id %>">
                <%= role.title %>
            </option>
        <% }) %>
    </select>
    <%- include('../layout/form-buttons'); %>
</form>

<%- include('../layout/form-foot'); %>
