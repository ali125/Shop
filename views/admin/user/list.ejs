<%- include('../layout/table-head'); %>
<% if(users.length > 0) { %>
    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>#</th>
            <th>عکس</th>
            <th>نام و نام خانوادگی</th>
            <th>ایمیل</th>
            <th>موبایل</th>
            <th>نقش</th>
            <th></th>
        </tr>

        </thead>
        <tbody>
        <% users.forEach(usr =>{ %>
            <tr>
                <th scope="row"><%= usr.id %></th>
                <td>
                    <% if(usr.avatar_url) { %>
                        <img src="<%= usr.avatar_url %>" alt="<%= usr.full_name %>" />
                    <% } else { %>
                        <img src="/images/default-usr.jpg" alt="<%= usr.full_name %>" />
                    <% } %>
                </td>
                <td><%= usr.full_name %></td>
                <td><%= usr.email %></td>
                <td><%= usr.mobile %></td>
                <td><%= usr.role.title %></td>
                <td>
                    <% if(usr.role.slug !== 'admin' || usr.id !== user.id) { %>
                    <a href="/admin/users/<%= usr.id %>/edit" class="btn btn-sm btn-warning">ویرایش</a>
                    <a href="/admin/users/<%= usr.id %>/delete" class="btn btn-sm btn-danger">حذف</a>
                    <% } %>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>

<% } else { %>
    <h1>کاربری یافت نشد.</h1>
<% } %>
<%- include('../layout/table-foot'); %>

