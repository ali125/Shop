<%- include('../layout/table-head'); %>
<% if(users.length > 0) { %>
    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>#</th>
            <th>عکس</th>
            <th>نام و نام خانوادگی</th>
            <th>ایمیل</th>
            <th>موبایل</th>
            <th></th>
        </tr>

        </thead>
        <tbody>
        <% users.forEach(user =>{ %>
            <tr>
                <th scope="row"><%= user.id %></th>
                <td>
                    <% if(user.avatar_url) { %>
                        <img src="<%= user.avatar_url %>" alt="<%= user.full_name %>" />
                    <% } else { %>
                        <img src="/images/default-user.jpg" alt="<%= user.full_name %>" />
                    <% } %>
                </td>
                <td><%= user.full_name %></td>
                <td><%= user.email %></td>
                <td><%= user.mobile %></td>
                <td>
                    <a href="/admin/users/<%= user.id %>/edit" class="btn btn-sm btn-warning">ویرایش</a>
                    <a href="/admin/users/<%= user.id %>/delete" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>

<% } else { %>
    <h1>کاربری یافت نشد.</h1>
<% } %>
<%- include('../layout/table-foot'); %>

