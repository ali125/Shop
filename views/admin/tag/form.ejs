<%- include('../layout/form-head', { form_title: 'اطلاعات تگ'  }); %>

<form method="POST" action="/admin/tags/<%= editing ? tag.id + '/update' : 'add' %>" data-parsley-validate class="form-horizontal main-form form-label-left">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <div class="form-group">
        <label for="name">عنوان</label>
        <input type="text" class="form-control" name="name" id="name" value="<%= editing || hasError ? tag.name : '' %>" required />
    </div>
    <div class="form-group">
        <label for="slug">عنوانک</label>
        <input type="text" class="form-control" name="slug" id="slug" value="<%= editing || hasError ? tag.slug : '' %>" />
    </div>

    <%- include('../layout/form-buttons'); %>
</form>

<%- include('../layout/form-foot'); %>
