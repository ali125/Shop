<%- include('../layout/header'); %>
<div class="">
    <%- include('../layout/head-page'); %>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2><%= title %></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <h4><%= data.created_at %></h4>

                    <section>
                        <div class="receiver">
                            <strong>گیرنده:‌</strong>
                            <span><%= address.user.full_name %></span>
                        </div>
                        <div class="call">
                            <strong>شماره تماس:‌</strong>
                            <span><%= address.mobile %></span>
                        </div>
                        <div class="address">
                            <strong>ارسال به:‌</strong>
                            <span>
                                <%= address.state.name %>  -
                                <%= address.city.name %> -
                                <%= address.address %>
                            </span>
                        </div>
                    </section>
                    <section>
                        <div class="total-price">
                            <strong>مبلغ کل: </strong>
                            <span><%= data.total_price %></span>
                        </div>
                    </section>
                    <section>
                        <div class="content-orders">
                            <ul class="head-orders">
                                <li class="delivery-type">
                                    <strong>ارسال عادی</strong>
                                    (<strong>تحویل داده شد</strong>)
                                </li>
                                <li class="delivered_at">
                                    <strong>تحویل: </strong>
                                    <span>شنبه ۵ بهمن بازه ۱۲ - ۱۵</span>
                                </li>
                                <li class="delivered_price">
                                    <strong>هزینه ارسال: </strong>
                                    <span>رایگان</span>
                                </li>
                            </ul>
                            <div class="body-orders">
                                <% data.orderItems.forEach(item => { %>
                                    <div class="product-order">
                                        <img src="<%= item.stock.media.length > 0 ? item.stock.media[0].media_url : '/images/default.jpg' %>"
                                             alt="<%= item.title %>" />
                                        <div class="details">
                                            <h4><%= item.title %></h4>
                                            <ul>
                                                <% item.stock.termmeta.forEach(t => { %>
                                                    <% if(t.stock_model.model_slug === "colors") { %>
                                                        <li>
                                                            <span class="color" style="background-color: <%= t.meta_value %>"></span>
                                                            <span><%= t.meta_key %></span>
                                                        </li>
                                                    <% } %>
                                                <% }) %>
                                                <li>
                                                    <span>تعداد: </span>
                                                    <span><%= item.quantity %></span>
                                                </li>
                                                <li>
                                                    <span>قیمت واحد: </span>
                                                    <span><%= item.price %></span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../layout/footer'); %>
